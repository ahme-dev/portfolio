---
import { Icon } from "astro-icon";

export interface Props {
	title: string;
	about: string;
	previewLink?: string;
	techs: string[];
}

const props = Astro.props;
---

<div
	class="md:basis-[30rem] h-fit shrink-0 flex flex-col group gap-8 p-8 bg-amber-200/10 hover:bg-amber-200 hover:text-neutral-900 rounded-3xl transition-all hover:-translate-y-2"
>
	{/* Top section */}
	<div class="flex gap-4 justify-between">
		{/* Tech used */}
		<div class="flex items-center gap-2 [&>*]:h-6 [&>*]:w-6">
			{props.techs.map((tech) => <Icon name={`simple-icons:${tech}`} />)}
		</div>
		{/* Buttons */}
		<div class="flex gap-2">
			{
				props.previewLink && (
					<a
						href={props.previewLink}
						target="_blank"
						class="flex gap-2 h-8 w-8 border-2 border-neutral-100 rounded-full p-1 font-bold group-hover:border-neutral-900 hover:bg-neutral-900 hover:text-neutral-100 transition-all cursor-pointer"
					>
						<Icon name="mdi:firefox" />
					</a>
				)
			}
			<a
				href={"https://github.com/ahmeddots/" + props.title.toLowerCase()}
				target="_blank"
				class="flex gap-2 h-8 w-8 border-2 border-neutral-100 rounded-full p-1 font-bold group-hover:border-neutral-900 hover:bg-neutral-900 hover:text-neutral-100 transition-all cursor-pointer"
			>
				<Icon name="mdi:github" />
			</a>
		</div>
	</div>

	{/* Bottom section */}
	<div class="flex flex-col gap-4">
		<h1 class="font-bold text-lg">{props.title}</h1>
		<p>{props.about}</p>
	</div>
</div>
