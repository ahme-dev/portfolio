---
import DefaultLayout from "./DefaultLayout.astro";

const { frontmatter } = Astro.props;
---

<DefaultLayout title={frontmatter.title}>
	<div
		class="mx-auto my-4 flex max-w-3xl flex-col gap-8 rounded-xl bg-neutral-900/50 px-12 py-8"
	>
		<div>
			<h1 class="font-mono text-lg font-bold">{"# " + frontmatter.title}</h1>
			<p class="font-mono text-sm">{"Posted: " + frontmatter.date}</p>
		</div>
		<div class="flex flex-col gap-4">
			<slot />
		</div>
	</div>
</DefaultLayout>
