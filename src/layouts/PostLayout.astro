---
import DefaultLayout from "./DefaultLayout.astro";

const { frontmatter } = Astro.props;
---

<DefaultLayout title={frontmatter.title}>
	<div class="mx-auto flex max-w-3xl flex-col gap-8 p-8 px-12">
		<div>
			<h1 class="text-lg font-bold">{"# " + frontmatter.title}</h1>
			<p class="text-sm">{"Posted: " + frontmatter.date}</p>
		</div>
		<div class="flex flex-col gap-4">
			<slot />
		</div>
	</div>
</DefaultLayout>
